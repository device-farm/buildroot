# interface file auto-generated by buildroot

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet manual
  post-up udhcpc -A 0 -q -i $IFACE -p /var/run/udhcpc-$IFACE.pid &
  post-down kill $(cat /var/run/udhcpc-$IFACE.pid) || true

auto wlan0
iface wlan0 inet manual
  post-up wpa_supplicant -Dnl80211 -i $IFACE -B -P /var/run/wpa_supplicant.pid -c /etc/wpa_supplicant.conf
  post-up udhcpc -A 0 -q -i $IFACE -p /var/run/udhcpc-$IFACE.pid &
  post-down kill $(cat /var/run/udhcpc-$IFACE.pid) || true
  post-down kill $(cat /var/run/wpa_supplicant.pid)

auto wg0
iface wg0 inet manual
  pre-up ip link add dev wg0 type wireguard || true
  up ip link set up dev wg0
  post-up df-wireguard-start
  post-down df-wireguard-stop
